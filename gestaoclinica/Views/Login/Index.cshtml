@model gestaoclinica.Models.Usuario

<link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/Login.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/fontawesome-free-5.7.1-web/css/all.css" />

<div class="container">
    <div class="row justify-content-center align-items-center" style="height:100vh">

        <div class="col-4">
            
            <p class="text-lg-center"><font size="5"><b>FÁCIL DENTAL</b> <i class="fa fa-tooth"></i></font></p>

            @{
                if (TempData["MensagemValidacao"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["MensagemValidacao"]
                    </div>
                }
            }

            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Autenticar", "Login",  FormMethod.Post))
                    {
                        <div class="form-group">
                            <b>@Html.LabelFor(Model => Model.Email)</b>
                            @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <b>@Html.LabelFor(Model => Model.Senha)</b>
                            @Html.TextBoxFor(Model => Model.Senha, new { @class = "form-control", @type = "password" })
                        </div>
                        
                        <button type="submit" id="efetuarLogin" class="btn btn-primary">Login</button>
                    }
                    <hr />
                    <label class="small">Novo usuário?</label> <a href="#" class="small" data-toggle="modal" data-target="#modalNovoUsuario">Clique aqui para se registrar</a>
                    <br />
                    <label class="small">Esqueceu a sua senha?</label> <a href="" class="small">Clique aqui para recuperar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("CadastrarClinica", "Clinica"))
{
    @Html.AntiForgeryToken();
    
    <div class="modal fade" id="modalNovoUsuario" tabindex="-1" role="dialog" aria-labelledby="modalNovoUsuarioLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Preencha o formulário abaixo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                   <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Nome da Clínica:")
                                @Html.TextBox("nomeClinica", null, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                   </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Telefone da Clínica:")
                                @Html.TextBox("telefoneClinica", null, new { @class = "form-control telefone", @required = "required" })
                            </div>
                        </div>
                    </div>
                   <hr />
                   <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Seu Nome:")
                                @Html.TextBox("nomeUsuario", null, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Celular:")
                                @Html.TextBox("celularUsuario", null, new { @class = "form-control celular", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Email:")
                                @Html.TextBox("emailUsuario", null, new { @class = "form-control", @required = "required", @type="email" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Senha:")
                                @Html.Password("senhaUsuario", null, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cadastrar-se</button>
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript" src="~/Content/js/jquery-3.3.1.min.js"></script>

<script type="text/javascript" src="~/Content/css/bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript" src="~/Content/js/jQuery_Mask_Plugin_v1.14.15.js"></script>

<script type="text/javascript" src="~/Content/js/jquery_mask_class.js"></script>







