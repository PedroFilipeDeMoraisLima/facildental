@model gestaoclinica.Models.Tratamento

<h5>Cadastro de Tratamentos</h5>

<hr />

@using (Html.BeginForm("RealizarCadastro", "Tratamento"))
{
    if ((ViewData.ModelState.Any(x => x.Value.Errors.Any())) || (TempData["MsgErro"] != null))
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert">×</a>
            <h6>Ops! Aconteceu algo de errado com o seu cadastro...</h6>
            @Html.ValidationSummary()
            @TempData["MsgErro"]
        </div>
    }
    
    <div class="row">
        <div class="col-6">
            @Html.LabelFor(model => model.Descricao, "Descrição *")
            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", required = "required" })
        </div>
        <div class="col-3">
            @Html.LabelFor(model => model.Valor, "Valor *")
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", required = "required" })
        </div>
        <div class="col-3">
            @Html.LabelFor(model => model.Descricao, "Status *") <br />
            Ativo @Html.RadioButtonFor(model => model.Status, value: "A", htmlAttributes: new { @checked = true })
            Inativo @Html.RadioButtonFor(model => model.Status, value: "I")
        </div>
    </div>
    
    <br />

    <input type="submit" class="btn btn-primary" value="Cadastrar" />

    <a class="btn btn-secondary text-white" onclick="location.href='@Url.Action("Index", "Tratamento")'">Voltar</a>
}